<!DOCTYPE html>
<html>
  <head>
    <title>BlogRailsHome</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-light bg-light">
      <ul class="nav menu navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href=" <%= posts_path %> "><%= I18n.t('.layouts.application.articles') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><%= I18n.t('.layouts.application.contacts') %></a>
        </li>
        <li>
          <%= link_to 'En', locale: :en %>
        </li>
        <li>
          <%= link_to 'Рус', locale: :ru %>
        </li>
      </ul>

      <%= link_to I18n.t('.layouts.application.new'), new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>

    </nav>
  </div>

  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
        <div class="alert alert-<%=name%>">
          <%= message %>
        </div>
            <% end %>
      </div>
    </div>
    <%= yield %>
  </div>

  </body>
</html>
