<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <small>
      <time> <%= post.created_at.to_date.strftime("%d %B, %Y") %> </time>
      <% if post.category.present? %>
        |
        <%= link_to post.category.name, post.category %>
      <% end %>
      |
      <%= link_to I18n.t('.posts.post.edit'), edit_post_path(post) %>
      |
      <%= link_to I18n.t('.posts.post.delete'), post_path(post), method: :delete, data: {confirm: 'Вы уверены?'} %>

    </small>
  </section>

  <section class="post-summary clearfix ">
    <%= image_tag post.image, class: 'img-thumbnail thumb' if post.image? %>
    <%= post.summary %>

  </section>
</article>
